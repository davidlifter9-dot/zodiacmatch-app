  messagingSenderId: "526590211707",
  appId: "1:526590211707:web:de743a63445fc3b3a394de"
    };

    // INITIALIZE FIREBASE - THIS IS NON-NEGOTIABLE
    firebase.initializeApp(firebaseConfig);
    
    // Test function
    function signUp() {
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      
      firebase.auth().createUserWithEmailAndPassword(email, password)
        .then((userCredential) => {
          document.getElementById('status').innerText = 'SUCCESS! User created: ' + userCredential.user.email;
        })
        .catch((error) => {
          document.getElementById('status').innerText = 'ERROR: ' + error.message;
          console.error('Signup failed:', error);
        });
    }
  </script>
